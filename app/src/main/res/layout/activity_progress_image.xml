<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <com.android.demos.widget.ProgressImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/beach_huts"
        android:scaleType="centerCrop"
        app:progressEndColor="#00000000"
        app:progressStartColor="#80000000"
        app:progressTextColor="#ffffff"
        app:progressTextSize="25sp"
        app:progressType="bottom"/>

    <RadioGroup
        android:id="@+id/id_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/id_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="left"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/id_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="top"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/id_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="right"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/id_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bottom"
            android:textSize="16sp"/>
    </RadioGroup>


</LinearLayout>
